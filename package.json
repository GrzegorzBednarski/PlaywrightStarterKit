{
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "prepare": "husky install",
    "pw:eslint": "npx eslint . --ext .ts,.js --fix",
    "pw:prettier": "npx prettier --write '**/*.{js,ts}'",
    "pw:run:functional": "npx playwright test tests/functional",
    "pw:open:example": "cross-env ENV=example npx playwright test --ui",
    "pw:run:example": "cross-env ENV=example npx playwright test"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run pw:eslint",
      "npm run pw:prettier"
    ]
  }
}
